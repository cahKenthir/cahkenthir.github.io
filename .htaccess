<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle API routes
    RewriteRule ^server/api/(.*)$ server/api/$1 [L]
    
    # Redirect all requests to index.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.html [L]
</IfModule>
